generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  name        String
  description String    @default("")
  Terrain     Terrain[]

  @@map("games")
}

model Terrain {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  name      String
  width     Float
  height    Float
  angle     Float
  centerX   Float        @map("center_x")
  centerY   Float        @map("center_y")
  notes     String       @default("")
  type      TerrainType  @relation(fields: [typeId], references: [id])
  typeId    Int          @map("terrain_type_id")
  shape     TerrainShape @relation(fields: [shapeId], references: [id])
  shapeId   Int          @map("terrain_shape_id")
  game      Game         @relation(fields: [gameId], references: [id])
  gameId    Int          @map("game_id")

  @@map("terrains")
}

model TerrainType {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  name      String
  terrains  Terrain[]

  @@map("terrain_types")
}

model TerrainShape {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  name      String
  terrains  Terrain[]

  @@map("terrain_shapes")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  email     String   @unique
  password  String
  username  String   @unique

  @@map("users")
}

model Army {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  name        String
  gameSystem  String   @map("game_system")
  faction     String
  description String
  units       Unit[]

  @@map("armies")
}

model Unit {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  name        String
  stats       String
  gear        String
  notes       String
  color       String
  baseLength  Int         @map("base_length")
  baseWidth   Int         @map("base_width")
  baseShape   BaseShape   @relation(fields: [baseShapeId], references: [id])
  baseShapeId Int         @map("base_shape_id")
  army        Army        @relation(fields: [armyId], references: [id])
  armyId      Int         @map("army_id")
  miniatures  Miniature[]

  @@map("units")
}

model BaseShape {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  name      String
  units     Unit[]

  @@map("base_shapes")
}

model Miniature {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  name      String
  stats     String
  gear      String
  notes     String
  count     Int
  unit      Unit     @relation(fields: [unitId], references: [id])
  unitId    Int      @map("unit_id")

  @@map("miniatures")
}
